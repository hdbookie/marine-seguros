# Production Environment Variables for Vultr
RAILWAY_ENVIRONMENT=production
DATA_PATH=/data
PORT=8501

# API Keys (set these!)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional configurations
LOG_LEVEL=info
ENABLE_DEBUG_MODE=false

# Database paths (for production persistence)
AUTH_DB_PATH=/data/auth.db
DASHBOARD_DB_PATH=/data/dashboard.db

# Security
SESSION_TIMEOUT_MINUTES=30
MAX_FILE_SIZE_MB=50

# Monitoring (optional)
SLACK_WEBHOOK_URL=
ADMIN_EMAIL=