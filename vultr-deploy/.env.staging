# Staging Environment Variables for Vultr
RAILWAY_ENVIRONMENT=staging
DATA_PATH=/data
PORT=8501

# API Keys (will be copied from production)
GEMINI_API_KEY=your_gemini_api_key_here

# Staging-specific configurations
LOG_LEVEL=debug
ENABLE_DEBUG_MODE=true

# Separate database paths for staging
AUTH_DB_PATH=/data/auth_staging.db
DASHBOARD_DB_PATH=/data/dashboard_staging.db

# Security (more relaxed for staging)
SESSION_TIMEOUT_MINUTES=60
MAX_FILE_SIZE_MB=100

# Git branch
GIT_BRANCH=staging

# Optional staging features
SHOW_DEBUG_INFO=true
ENABLE_HOT_RELOAD=true